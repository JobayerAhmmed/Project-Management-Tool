@model IEnumerable<ProjectManagementTool.ViewModels.ProjectIndexViewModel>

@{
    ViewBag.Title = "- My Projects";
}

<h2>View All Projects in which you are involved</h2>
<hr />
<table class="table table-bordered table-responsive">
    <tr>
        <th>
            Name
        </th>
        <th>
            Short Name
        </th>
        <th>
            Status
        </th>
        <th>
            Number of members
        </th>
        <th>
            Number of Tasks
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfMembers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfTasks)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.ProjectId })
            </td>
        </tr>
    }

</table>
